<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.rioproject.examples</groupId>
        <artifactId>workflow</artifactId>
        <version>2.0.2</version>
    </parent>

    <groupId>org.rioproject.examples.workflow</groupId>
    <artifactId>workflow-service</artifactId>
    <name>Example :: Workflow Service Implementation</name>

    <dependencies>

        <dependency>
            <groupId>org.rioproject.examples.workflow</groupId>
            <artifactId>workflow-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-lib</artifactId>
        </dependency>

        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.rioproject</groupId>
            <artifactId>rio-test</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.sun.jini</groupId>
            <artifactId>outrigger</artifactId>
            <version>${river.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.sun.jini</groupId>
            <artifactId>mahalo</artifactId>
            <version>${river.version}</version>
            <scope>test</scope>
        </dependency>
        
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/*IT*.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>run-integration-test</id>
            <activation>
                <file>
                    <exists>${basedir}/../../../distribution/target/rio.dist</exists>
                </file>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <forkMode>always</forkMode>
                            <systemProperties>
                                <property>
                                    <name>java.security.policy</name>
                                    <value>${basedir}/../../../distribution/target/rio-${rio.version}/policy/policy.all</value>
                                </property>
                                <property>
                                    <name>RIO_HOME</name>
                                    <value>${basedir}/../../../distribution/target/rio-${rio.version}</value>
                                </property>
                            </systemProperties>
                            <excludes>
                                <exclude>**/*ITWorkflowTest.java</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <systemProperties>
                                <property>
                                    <name>java.security.policy</name>
                                    <value>${basedir}/../../../distribution/target/rio-${rio.version}/policy/policy.all</value>
                                </property>
                                <property>
                                    <name>opstring</name>
                                    <value>../src/main/opstring/workflow.groovy</value>
                                </property>
                                <property>
                                    <name>RIO_HOME</name>
                                    <value>${basedir}/../../../distribution/target/rio-${rio.version}</value>
                                </property>
                            </systemProperties>
                            <excludes>
                                <exclude>**/*ITWorkflowDeployTest.java</exclude>
                            </excludes>
                        </configuration>
                    </plugin>
                </plugins>


            </build>
        </profile>
    </profiles>

</project>
